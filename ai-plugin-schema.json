{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/minsa110/ai-plugin-schema/main/ai-plugin-schema.json",
    "type": "object",
    "properties": {
        "schema_version": {
            "type": "string",
            "pattern": "^v\\d+$"
        },
        "name_for_human": {
            "type": "string"
        },
        "name_for_model": {
            "type": "string"
        },
        "description_for_human": {
            "type": "string"
        },
        "description_for_model": {
            "type": "string"
        },
        "api": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "is_user_authenticated": {
                    "type": "string"
                }
            },
            "required": ["type", "url", "is_user_authenticated"],
            "additionalProperties": false
        },
        "logo_url": {
            "type": "string",
            "format": "uri"
        },
        "auth": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                }
            },
            "required": ["type"],
            "additionalProperties": false
        },
        "legal_info_url": {
            "type": "string",
            "format": "uri"
        },
        "contact_email": {
            "type": "string",
            "format": "email"
        },
        "HttpAuthorizationType": {
            "type": "HttpAuthorizationType",
            "enum": ["bearer", "basic"]
        }
    },
    "required": [
        "schema_version",
        "name_for_human",
        "name_for_model",
        "description_for_human",
        "description_for_model",
        "api",
        "logo_url",
        "auth",
        "legal_info_url",
        "contact_email"
    ],
    "additionalProperties": false
}
